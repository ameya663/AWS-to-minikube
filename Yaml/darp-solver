apiVersion: v1
kind: Service
metadata:
  name: drt-darp-solver
  labels:
    k8s-app: drt-darp-solver
spec:
  type: NodePort
  ports:
  - port: 31001
    targetPort: 5050
    protocol: TCP
    name: http
  selector:
    k8s-app: drt-darp-solver
---    
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: drt-darp-solver
  namespace: drt
  labels:
    k8s-app: drt-darp-solver
spec:
  replicas: 1
  selector:
    matchLabels:
      k8s-app: drt-darp-solver
  template:
    metadata:
      name: drt-darp-solver    
      labels:
        k8s-app: drt-darp-solver
    spec:
      containers:
       - name: drt-darp-solver
         image: 312801333485.dkr.ecr.eu-central-1.amazonaws.com/rideshare/drt-darp-solver
         env:
         - name: D2D_DIRECTIONS_DRIVING_SERVICE_URL
           value: http://osrm-routing-core.drt:31002/      
         - name: STAGE
           value: development    
         securityContext:
          privileged: false
          procMount: Default 
      imagePullSecrets:
       - name: awsecr-cred 
    strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 25%   
  status:
    conditions:
    - type: Available
      status: 'True'
    - type: Progressing
      status: 'True'  